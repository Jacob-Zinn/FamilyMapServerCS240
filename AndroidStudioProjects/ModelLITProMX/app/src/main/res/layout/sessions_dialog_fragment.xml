<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomSheetContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sessions_menu_divider_v2"
        android:gravity="center_horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Athlete Options"
        android:textColor="@color/dark_grey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/gatedropAnalytics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sessions_menu_divider"
        android:gravity="center_horizontal"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:text="Gatedrop Analytics"
        android:textColor="@color/light_red"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/twelveWeekTarget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sessions_menu_divider"
        android:gravity="center_horizontal"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:text="Show 12-Week Target"
        android:textColor="@color/light_red"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/clearFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sessions_menu_divider"
        android:gravity="center_horizontal"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:text="Clear Filter"
        android:textColor="@color/info_blue"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/showHiddenSessions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sessions_menu_divider"
        android:gravity="center_horizontal"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:text="Show Hidden Sessions"
        android:textColor="@color/info_blue"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:text="Cancel"
        android:textColor="@color/info_blue"
        android:textFontWeight="700"
        android:textSize="22sp" />


</LinearLayout>

